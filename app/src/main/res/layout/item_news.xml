<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Title"
        android:layout_marginHorizontal="16dp"
        tools:text="Заглавие"/>

    <TextView
        android:id="@+id/textAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SubTitle"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        tools:text="Автор: "/>

    <TextView
        android:id="@+id/textResource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SubTitle"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        tools:text="Ресурс: "/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        tools:src="@mipmap/ic_launcher_new_foreground"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Description"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        tools:text="В Калифорнии владелица автомобиля Tesla припарковала транспортное средство в бассейне на заднем дворе своего дома."/>

    <TextView
        android:id="@+id/textDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/SubTitle"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        tools:text="11-12-2023"/>

    <TextView
        android:id="@+id/buttonReadAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Title"
        android:background="@drawable/bg_news_button"
        android:text="@string/news_item_readAll"
        android:gravity="center"
        android:layout_gravity="end"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"/>

</LinearLayout>