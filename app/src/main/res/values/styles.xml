<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Title">
        <item name="fontFamily">@font/pt_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="SubTitle">
        <item name="fontFamily">@font/pt_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Description">
        <item name="fontFamily">@font/pt_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TitleDialog">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="DescriptionDialog">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="LoaderStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/black</item>
    </style>
</resources>